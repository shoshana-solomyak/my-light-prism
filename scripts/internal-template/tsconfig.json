{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "removeComments": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "target": "ES2021"
    },
    "include": ["src"]
}
